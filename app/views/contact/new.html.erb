<div class="row">
  <div class="span12">
    <%= form_for @contact, :url => { :action => "create" }, :html => { :class => "form-horizontal" } do |f| %>
      <%= render 'layouts/error_messages', object: f.object %>

      <div class="form-group">
	<%= f.label :name, :class => "col-lg-2 control-label" %>
	<div class="col-lg-8">
	  <%= f.text_field :name, :class => "form-control" %>
	</div>
      </div>

      <div class="form-group">
	<%= f.label :email, :class => "col-lg-2 control-label" %>
	<div class="col-lg-8">
	  <%= f.text_field :email, :class => "form-control" %>
	</div>
      </div>

      <div class="form-group">
	<%= f.label :subject, :class => "col-lg-2 control-label" %>
	<div class="col-lg-8">
	  <%= f.text_field :subject, :class => "form-control" %>
	</div>
      </div>

      <div class="form-group">
	<%= f.label :message, :class => "col-lg-2 control-label" %>
	<div class="col-lg-8">
	  <%= f.text_area :message, :class => "form-control", :rows => 10 %>
	</div>
      </div>

      <div class="form-group">
        <label class="col-lg-2 control-label"></label>
	<div class="col-lg-8">
	  <%= f.submit "Create", class: "btn btn-primary" %>
	</div>
      </div>
    <% end %>
  </div>
</div>                                                                                  

