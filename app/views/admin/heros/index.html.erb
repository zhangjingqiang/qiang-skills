<h2>List</h2>

<div class="bs-docs-example">
  <table class="table">
    <thead>
      <tr>
	<th width="10%"></th>
	<th width="">Title</th>
	<th width="">Description</th>
	<th width="20%">Created At</th>
	<th width="20%">Updated At</th>
	<th width="20%"></th>
      </tr>
    </thead>
    <tbody>
      <% @heros.each_with_index do |hero,index| %>
	<tr>
	  <td><%= index + 1 %></td>
	  <td><%= hero.title %></td>
	  <td><%= truncate(hero.description, length: 20, omission: '...') %></td>
	  <td><%= hero.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
	  <td><%= hero.updated_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
	  <td style="text-align:center;">
	    <%= link_to admin_hero_path(hero), :class => "btn btn-info" do %>
	      Show
	    <% end %>
	    <%= link_to edit_admin_hero_path(hero), :class => "btn btn-success" do %>
	      Edit
	    <% end %>
	    <%= link_to admin_hero_path(hero), method: :delete, data: { confirm: 'Are you sure you want to delete?' }, :class => "btn btn-danger" do %>
	      Delete
	    <% end %>
	  </td>
	</tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= will_paginate @heros, renderer: BootstrapPagination::Rails, bootstrap: 3 %>

<div style="clear:both;"></div>
<%= link_to 'New', new_admin_hero_path, :class => 'btn btn-primary' %>
