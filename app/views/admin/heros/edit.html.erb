<h2>Edit</h2>

<div class="row">
  <div class="span12">
    <%= form_for @hero, :url => { :action => "update" }, :html => { :class => "form-horizontal" } do |f| %>
      <%= render :partial =>'form', :locals => {:action => 'edit', :f => f} %>
      <div class="pull-left">
	<%= f.submit "Update", class: "btn btn-primary" %>
      </div>
      <div class="pull-right">
	<%= link_to 'Back', admin_heros_path, class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>                                                                                  

