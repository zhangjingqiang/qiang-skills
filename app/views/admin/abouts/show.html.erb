<h2>Show</h2>

<table class="table table-bordered table-striped">
  <colgroup>
    <col class="span1">
    <col class="span7">
  </colgroup>
  <thead>
    <tr>
      <th width="15%">Title</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
	Title
      </td>
      <td>
	<%= @about.title %>
      </td>
    </tr>
    <tr>
      <td>
	Description
      </td>
      <td>
	<%= simple_format(@about.description) %>
      </td>
    </tr>
    <tr>
      <td>
	Created At
      </td>
      <td>
	<%= @about.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
      </td>
    </tr>
    <tr>
      <td>
	Updated At
      </td>
      <td>
	<%= @about.updated_at.strftime('%Y/%m/%d %H:%M:%S') %>
      </td>
    </tr>
  </tbody>
</table>

<%= link_to 'Edit', edit_admin_about_path(@about), class: "btn btn-success" %>
<%= link_to 'Delete', admin_about_path(@about), method: :delete, data: { confirm: 'Are you sure you want to delete?' }, class: "btn btn-danger" %>
<%= link_to 'Back', admin_abouts_path, class: "btn btn-default" %>
