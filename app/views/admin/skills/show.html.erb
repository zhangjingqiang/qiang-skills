<h2>Show</h2>

<table class="table table-bordered table-striped">
  <colgroup>
    <col class="span1">
    <col class="span7">
  </colgroup>
  <thead>
    <tr>
      <th width="15%">Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
  Category
      </td>
      <td>
  <%= category(@skill.category_id) %>
      </td>
    </tr>
    <tr>
      <td>
	Name
      </td>
      <td>
	<%= @skill.name %>
      </td>
    </tr>
    <tr>
      <td>
	Description
      </td>
      <td>
	<%= simple_format(@skill.description) %>
      </td>
    </tr>
    <tr>
      <td>
  Position
      </td>
      <td>
  <%= @skill.position %>
      </td>
    </tr>
    <tr>
      <td>
  Level
      </td>
      <td>
  <%= @skill.level %>
      </td>
    </tr>
    <tr>
      <td>
	Created At
      </td>
      <td>
	<%= @skill.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
      </td>
    </tr>
    <tr>
      <td>
	Updated At
      </td>
      <td>
	<%= @skill.updated_at.strftime('%Y/%m/%d %H:%M:%S') %>
      </td>
    </tr>
  </tbody>
</table>

<%= link_to 'Edit', edit_admin_skill_path(@skill), class: "btn btn-success" %>
<%= link_to 'Delete', admin_skill_path(@skill), method: :delete, data: { confirm: 'Are you sure you want to delete?' }, class: "btn btn-danger" %>
<%= link_to 'Back', admin_skills_path, class: "btn btn-default" %>
