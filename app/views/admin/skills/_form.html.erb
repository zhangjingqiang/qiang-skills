<%= render 'layouts/error_messages', object: f.object %>

<div class="form-group">
  <%= f.label :category_id, :class => "col-lg-2 control-label" %>
  <div class="col-lg-8">
    <%= f.select :category_id, Category.order(:position).map{|c| [c.name, c.id]} %>
  </div>
</div>

<div class="form-group">
  <%= f.label :name, :class => "col-lg-2 control-label" %>
  <div class="col-lg-8">
    <%= f.text_field :name, :class => "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :description, :class => "col-lg-2 control-label" %>
  <div class="col-lg-8">
    <%= f.text_area :description, :class => "form-control", :rows => 10 %>
  </div>
</div>

<div class="form-group">
  <%= f.label :position, :class => "col-lg-2 control-label" %>
  <div class="col-lg-8">
    <%= f.text_field :position, :class => "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :level, :class => "col-lg-2 control-label" %>
  <div class="col-lg-8">
    <%= f.text_field :level, :class => "form-control" %>
  </div>
</div>
